// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String @unique
  lastName String
  email String @unique @db.VarChar(30)
  password String
  Reactions Reactions[]
}

model Reactions {
  id Int @id @default(autoincrement())
  water Boolean
  user User @relation(fields: [fName], references: [firstName], onDelete: Cascade)
  fName String
}
